<application>
  <component name="LanguageInjectionConfiguration">
    <injection language="AIDL" injector-id="xml">
      <display-name>meta-data/@value</display-name>
      <place><![CDATA[xmlAttribute().withLocalName(string().equalTo("value")).withNamespace(string().equalTo("http://schemas.android.com/apk/res/android")).withParent(xmlTag().withLocalName(string().equalTo("meta-data")))]]></place>
    </injection>
  </component>
</application>